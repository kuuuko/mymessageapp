@model IEnumerable<MyMessageApp.Models.NewsArticle>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.article_text)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.article_text)
        </td>
        
        <td> |
            @Html.ActionLink("Link", "MyIndex", new { article_id = item.article_Id }) |
        </td>
    </tr>
}

</table>

@model IEnumerable<MyMessageApp.Models.MessageViewModel>

@{
    ViewBag.Title = "MyIndex";
}

<h2>MyIndex</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.messageText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.identLevel)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.messageText)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.identLevel)
        </td>
        <td>
            @Html.ActionLink("Respond", "MyCreate", new { parentId = item.id }) |
        </td>
    </tr>
}

</table>
